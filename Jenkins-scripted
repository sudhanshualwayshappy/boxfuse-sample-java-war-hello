
node {
    // Environment or variables can be set here
    def appWar = 'boxfuse-sample-java-war-hello.war'

    try {
        // Stage: GIT checkout
        stage('GIT checkout') {
            git 'https://github.com/sudhanshualwayshappy/boxfuse-sample-java-war-hello.git'
        }

        // Stage: Build
        stage('build') {
            sh 'mvn clean package'
            sh "mv target/*.war target/${appWar}"
        }

        // Stage: Deploy
        stage('deploy') {
            sshagent(['tomcat1']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/${appWar} ubuntu@3.6.38.55:/home/ubuntu/apache-tomcat-9.0.87/webapps/
                    
                    ssh ubuntu@3.6.38.55 /home/ubuntu/apache-tomcat-9.0.87/bin/shutdown.sh
                    ssh ubuntu@3.6.38.55 /home/ubuntu/apache-tomcat-9.0.87/bin/startup.sh
                   """
            }
        }
    } catch (Exception err) {
        // Error handling
        throw err // Rethrow the error to fail the build
    }
}
